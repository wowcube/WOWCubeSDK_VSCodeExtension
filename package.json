{
  "name": "WOWCubeSDK",
  "displayName": "WOWCube SDK Extension",
  "description": "Develop Cubeapp applications for WOWCube device with WOWCube Development Kit",
  "icon": "media/icon.png",
  "version": "2.1.9",
  "publisher": "cubios-inc",
  "engines": {
    "vscode": "^1.64.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wowcube/WOWCubeSDK_VSCodeExtension.git"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:WOWCubeSDK.wizardView",
    "onView:WOWCubeSDK.btdeviceView",
    "onCommand:WOWCubeSDK.openWizard",
    "onCommand:WOWCubeSDK.openAdHocSharing",
    "onCommand:WOWCubeSDK.openExternalTools",
    "onCommand:WOWCubeSDK.scanDevices",
    "onCommand:config.commands.configureViewOnWindowOpen",
    "onCommand:workbench.action.tasks.runTask"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "Log",
        "aliases": [
          "log"
        ],
        "extensions": [
          ".log"
        ],
        "configuration": "./log.configuration.json",
        "mimetypes": [
          "log",
          "text/log",
          "text/x-log",
          "text/x-code-output",
          "x-code-output"
        ]
      }
    ],
    "grammars": [
      {
        "language": "Log",
        "scopeName": "code.log",
        "path": "./src/syntaxes/log.tmLanguage"
      }
    ],
    "taskDefinitions": [
      {
        "type": "wowsdkbuild",
        "required": [
          "action"
        ],
        "properties": {
          "action": {
            "type": "string",
            "description": "The build action. Should be either 'complie' or 'build'."
          },
          "target": {
            "type": "string",
            "description": "Specifies build target"
          }
        }
      }
    ],
    "configuration": [
      {
        "title": "Configuration Samples",
        "order": 1,
        "properties": {
          "wowsdk.conf.wizard": {
            "type": "string",
            "default": "",
            "description": "Last used project folder",
            "scope": "application"
          },
          "wowsdk.conf.language": {
            "type": "string",
            "default": "pawn",
            "description": "Last used programming language of new project",
            "scope": "application"
          },
          "wowsdk.conf.wowsdkpath": {
            "type": "string",
            "default": "",
            "description": "Path to WOWCube SDK",
            "scope": "application"
          },
          "wowsdk.conf.wowsdkversion": {
            "type": "string",
            "default": "1.0.0",
            "description": "Currently used version of WOWCube SDK",
            "scope": "application"
          },
          "wowsdk.conf.currentdevice": {
            "type": "string",
            "default": "",
            "description": "Selected WOWCube device",
            "scope": "application"
          },
          "wowsdk.conf.detecteddevices": {
            "type": "string",
            "default": "",
            "description": "Detected WOWCube devices",
            "scope": "application"
          },
          "wowsdk.conf.loggingmode": {
            "type": "string",
            "default": "1",
            "description": "Current logging mode",
            "scope": "application"
          },
          "wowsdk.conf.autocheckforupdates": {
            "type": "string",
            "default": "1",
            "description": "Auto-check for updates flag",
            "scope": "application"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wow-explorer",
          "title": "WOWCube SDK",
          "icon": "media/wow.svg"
        }
      ]
    },
    "views": {
      "wow-explorer": [
        {
          "id": "WOWCubeSDK.wizardView",
          "name": "Cubeapp Project Wizard",
          "icon": "media/dep.svg",
          "type": "webview"
        },
        {
          "type": "webview",
          "id": "WOWCubeSDK.examplesView",
          "name": "Documentation & Code Examples"
        },
        {
          "type": "webview",
          "id": "WOWCubeSDK.settingsView",
          "name": "Development Kit Settings"
        },
        {
          "type": "webview",
          "id": "WOWCubeSDK.btdeviceView",
          "name": "Bluetooth Devices"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "WOWCubeSDK.projectPanel",
        "displayName": "WOWCube Cubeapp Project",
        "selector": [
          {
            "filenamePattern": "wowcubeapp-build.json"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "WOWCubeSDK.openWizard",
        "title": "Open New Cubeapp Wizard"
      },
      {
        "command": "WOWCubeSDK.openAdHocSharing",
        "title": "Open Share Ad-Hoc Cubeapp"
      },
      {
        "command": "WOWCubeSDK.openExternalTools",
        "title": "Open Manage External Tools"
      },
      {
        "command": "WOWCubeSDK.openDeviceDetails",
        "title": "Open WOWCube device details"
      },
      {
        "command": "WOWCubeSDK.scanDevices",
        "category": "WOWCube SDK",
        "title": "Scan for paired WOWCube devices"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.18.33",
    "@types/unzipper": "^0.10.5",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "chmodr": "^1.2.0",
    "form-data": "^4.0.0",
    "markdown-it": "^12.3.2",
    "progress-stream": "^2.0.0",
    "regedit": "^5.0.0",
    "request": "^2.88.2",
    "unzipper": "^0.10.11"
  }
}
